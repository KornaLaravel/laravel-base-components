{
    "name": "rawilk/laravel-base",
    "description": "Useful blade components and functionality for most Laravel projects.",
    "keywords": [
        "Laravel",
        "Blade",
        "Livewire"
    ],
    "homepage": "https://github.com/rawilk/laravel-base",
    "license": "MIT",
    "authors": [
        {
            "name": "Randall Wilk",
            "email": "wilk.randall@gmail.com",
            "homepage": "https://randallwilk.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.37",
        "spatie/laravel-package-tools": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.5",
        "spatie/laravel-ray": "^1.24",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Rawilk\\LaravelBase\\": "src",
            "Rawilk\\LaravelBase\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rawilk\\LaravelBase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rawilk\\LaravelBase\\LaravelBaseServiceProvider"
            ],
            "aliases": {
                "LaravelBase": "Rawilk\\LaravelBase\\Facades\\LaravelBaseFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
